<xml>
	<!-- OSD externe CLM  (a inclure dans navit.xml après la balise </gui>)
	<xi:include href="/mnt/sdcard/navitOSD_320x200.xml"/>
	-->
	
	<!-- une commande qui affiche l'état du calcule de la route -->
	<osd name="my_osd_cmdif" update_period="1" enabled="yes" type="cmd_interface" w="20" h="20" x="450" y="175"
	command='osd[@name=="my_osd_text"].label= route.route_status==1 ? "Dst set" : 
		   (route.route_status==0     ? "No dst set" :  
		   (route.route_status==3     ? "Not found" : 
		   (route.route_status==5     ? "building path" : 
		   (route.route_status==13    ? "building path" : 
		   (route.route_status==17    ? "path done new" : 
		   (route.route_status==33    ? "path done incremental" : "unhandled"
		   )))))));'  />   <!-- -->
		   
	<osd type="text" enabled="yes" name="my_osd_text" align="4" label="initializing..." w="200"/>

	
	<!-- l'indicateur de dépassement de vitesse -->
	<osd enabled="yes" type="speed_warner" x="0" y="0" w="80" h="80"/>
	
	<!-- l'échelle -->
	<osd enabled="yes" type="scale" x="-100" y="0" w="100" h="26" font_size="150"/>
	
	<!-- l'indicateur d'état du GPS -->
	<osd enabled="yes" type="gps_status" x="0" y="0" w="80" h="80" />
	
	<!-- Le graphique de la prochainne consigne -->
	<osd enabled="yes" type="navigation_next_turn" x="0" y="120" background_color="#1b0877cc"/>
	<!-- la distance avant la prochaine consigne -->
 	<osd enabled="yes" type="text" label="In ${navigation.item[1].length[named]} " x="0" y="190" 
    font_size="220" w="100" h="24" align="4" background_color="#1b0877cc"/> 
    
    <!-- L'heure d'arrivée -->
 	<osd enabled="yes" type="text" label="TA: ${navigation.item.destination_time[arrival]}" x="-100" y="165"
 	font_size="220" w="100" h="24" align="4" background_color="#1b0877cc"/> 
    <!-- La distance restante avant arrivée à destination -->
 	<osd enabled="no" type="text" label="${navigation.item.destination_length[named]}" x="-100" y="190"
    font_size="220" w="100" h="24" align="4" background_color="#1b0877cc"/>
    <!-- Le temps restant pour avant arriver à destination -->
 	<osd enabled="yes" type="text" label="${navigation.item.destination_time[remaining]}" x="-100" y="190"
 	font_size="220" w="100" h="24" align="4" background_color="#1b0877cc"/>
    
    <!-- Le nom de la rue suivie de sa vitesse limitée -->
	<osd enabled="yes" type="text" label="${tracking.item.route_speed} sur ${navigation.item.street_name}" 
  		font_size="220" w="320" h="25" align="0" background_color="#1b0877cc" x="0" y="-25"/> 
  		
 <osd enabled="yes"  type="button" x="-60" y="60" command="zoom_in()" src="gui_zoom_in.png"/>
 <osd enabled="yes"  type="button" x="-60" y="110" command="zoom_out()" src="gui_zoom_out.png"/> 
 
   
  	<!-- La vitesse du véhicule -->
 	<osd enabled="no" type="text" label="${vehicle.position_speed}" x="0" y="10%"
 		font_size="220" w="100%" h="24" align="4" background_color="#1b0877cc" />
    
   
</xml>
